{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // note: enable again when https://github.com/Microsoft/TypeScript/issues/21533 is released
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "exclude": [
    "index.d.ts",
    "node_modules",
    "dist"
  ]
}
