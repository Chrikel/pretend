{
  "name": "pretend",
  "version": "0.2.3",
  "description": "A decorator based http webservice client written in typescript",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "index.d.ts",
    "src",
    "typings/isomorphic-fetch.d.ts"
  ],
  "scripts": {
    "linter": "tslint '{src,test}/**/*.ts'",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --sourceMap",
    "pretest": "npm run clean && tsc --inlineSourceMap",
    "test": "nyc --reporter lcov ./node_modules/.bin/mocha --require source-map-support/register --recursive dist/test --all",
    "watch:build": "tsc --watch --sourceMap",
    "watch:test": "mocha --watch --recursive dist/test",
    "prerelease": "npm test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/pretend"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.14",
    "cz-conventional-changelog": "1.2.0",
    "in-publish": "2.0.0",
    "mocha": "3.1.2",
    "nock": "9.0.1",
    "nyc": "8.4.0",
    "rimraf": "2.5.4",
    "source-map-support": "0.4.6",
    "standard-version": "3.0.0",
    "tslint": "3.15.1",
    "typescript": "2.0.7"
  },
  "dependencies": {
    "@types/chai": "3.4.34",
    "@types/isomorphic-fetch": "0.0.31",
    "@types/mocha": "2.2.32",
    "@types/node": "6.0.46",
    "isomorphic-fetch": "2.2.1",
    "omni-fetch": "0.1.1"
  },
  "publishConfig": {
    "tag": "next"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "coverage",
      "dist/test"
    ]
  }
}
